@model  DataEntity.Sys_userEntity
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_DefaultLay.cshtml";
}


<div class="col-lg-12">
    <h2>添加用户</h2>
    @using (Html.BeginAjaxForm("Add", "User", null, FormMethod.Post,
                            new AjaxFormOptions { OnErrorCallBack = "CommentCallBack", OnSuccessCallBack = "CommentCallBack", BeforeSubmitCallBack = "BeforCallBack", ClearForm = false },
                            new { @class = "col-lg-10", role = "form" }))
    {


        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.UserCode, new { @class = "col-lg-3" })
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.UserCode, new { @class = "form-control input-md" })
                @Html.ValidationMessageFor(m => m.UserCode)
            </div>
        </div>
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.UserName, new { @class = "col-lg-3" })
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-md" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.Password, new { @class = "col-lg-3" })
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-md" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.RoleName, new { @class = "col-lg-3" })
            <div class="col-lg-6">
                @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control input-md" })
                @Html.ValidationMessageFor(m => m.RoleName)
            </div>
        </div>
        <div class="form-group col-lg-12">
            @Html.LabelFor(m => m.Description, new { @class = "col-lg-3" })
            <div class="col-lg-6">
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control input-md", @style= "height:150px", cols=5 })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>
                <button type="submit" class="btn btn-default">Submit Button</button>
                <button type="reset" class="btn btn-default">Reset Button</button>


    }
</div>
